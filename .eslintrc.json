{
  "env": {
    "node": true,
    "mocha": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parser":  "@typescript-eslint/parser",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2022
  },
  "rules": {
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "brace-style": [
      "error",
      "1tbs"
    ],
    "space-before-blocks": [
      "error",
      "always"
    ]
  }
}
