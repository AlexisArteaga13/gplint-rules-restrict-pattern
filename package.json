{
  "name": "gplint",
  "version": "1.1.0",
  "description": "A Gherkin linter/validator written in javascript. Based on gherkin-lint by vsiakka.",
  "author": "Luis Zurro",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/Nyaran/gplint"
  },
  "keywords": [
    "gherkin",
    "pickle",
    "cucumber",
    "cucumberjs",
    "linter",
    "lint"
  ],
  "dependencies": {
    "@cucumber/gherkin": "22.0.0",
    "@cucumber/gherkin-streams": "4.0.0",
    "chalk": "4.1.2",
    "commander": "8.3.0",
    "core-js": "3.19.0",
    "glob": "7.2.0",
    "lodash": "4.17.21",
    "strip-json-comments": "3.0.1",
    "xml-js": "1.6.11"
  },
  "devDependencies": {
    "@babel/cli": "7.15.7",
    "@babel/core": "7.15.8",
    "@babel/preset-env": "7.15.8",
    "chai": "4.3.4",
    "coveralls": "3.1.1",
    "eslint": "8.1.0",
    "mocha": "9.1.3",
    "mocha-sinon": "2.1.2",
    "mock-fs": "5.1.1",
    "nyc": "15.1.0",
    "sinon": "11.1.2"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "bin": {
    "gplint": "dist/main.js"
  },
  "scripts": {
    "build": "babel src -d dist",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "demo": "node ./dist/main.js -c ./test-data-wip/.gplintrc test-data-wip/**",
    "lint": "eslint ./src ./test",
    "mocha": "mocha --recursive",
    "prepare": "npm run build",
    "test": "npm run lint && npm run build && nyc -include=dist/** npm run mocha"
  },
  "license": "ISC"
}
